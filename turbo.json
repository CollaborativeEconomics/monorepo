{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["POSTGRES_PRISMA_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [".env", ".env.local"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["MOBULA_API_KEY"]
    },
    "db:generate": {
      "cache": false
    },
    "install": {
      "dependsOn": ["^install"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "//#format-and-lint": {},
    "//#format-and-lint:fix": {
      "cache": false
    }
  }
}
