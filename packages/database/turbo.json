{
  "extends": ["//"],
  "globalEnv": [
    "POSTGRES_PRISMA_URL",
    "IPFS_GATEWAY_URL",
    "IPFS_API_ENDPOINT",
    "IPFS_API_PINNING",
    "IPFS_API_KEY",
    "IPFS_API_SECRET",
    "IPFS_DEFAULT_REGION",
    "BLOB_READ_WRITE_TOKEN"
  ],
  "tasks": {
    "build": {
      "env": ["POSTGRES_PRISMA_URL"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "node_modules/@prisma/client/**"]
    }
  }
}
