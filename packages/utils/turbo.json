{
  "extends": ["//"],
  "globalEnv": [
    "POSTGRES_PRISMA_URL",
    "IPFS_API_KEY",
    "IPFS_API_SECRET",
    "BLOB_READ_WRITE_TOKEN",
    "XINFIN_MINTER_WALLET",
    "XINFIN_MINTER_SECRET",
    "XINFIN_NFT721_CONTRACT",
    "XINFIN_NFT1155_CONTRACT",
    "XINFIN_NFT6551_CONTRACT",
    "XINFIN_NETWORK",
    "TURBO_ENV"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**/*.js", "dist/**/*.d.ts", "dist/**/*.map"],
      "env": [
        "POSTGRES_PRISMA_URL",
        "IPFS_API_KEY",
        "IPFS_API_SECRET",
        "BLOB_READ_WRITE_TOKEN",
        "XINFIN_MINTER_SECRET",
        "XINFIN_NETWORK",
        "TURBO_ENV"
      ],
      "dependsOn": [
        "^build"
      ]
    }
  }
}
