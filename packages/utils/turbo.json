{
  "extends": ["//"],
  "globalEnv": [
    "POSTGRES_PRISMA_URL",
    "IPFS_API_KEY",
    "IPFS_API_SECRET",
    "BLOB_READ_WRITE_TOKEN",
    "XDC_MINTER_WALLET",
    "XDC_MINTER_SECRET",
    "XDC_NFT721_CONTRACT",
    "XDC_NFT1155_CONTRACT",
    "XDC_NFT6551_CONTRACT",
    "XDC_NETWORK",
    "TURBO_ENV"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**/*.js", "dist/**/*.d.ts", "dist/**/*.map"],
      "env": [
        "POSTGRES_PRISMA_URL",
        "IPFS_API_KEY",
        "IPFS_API_SECRET",
        "BLOB_READ_WRITE_TOKEN",
        "XDC_MINTER_SECRET",
        "XDC_NETWORK",
        "TURBO_ENV"
      ],
      "dependsOn": ["^build"]
    }
  }
}
