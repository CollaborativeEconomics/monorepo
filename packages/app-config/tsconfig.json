{
  "extends": "@cfce/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": false
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
