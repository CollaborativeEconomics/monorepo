{
  "extends": "@cfce/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "allowJs": true
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "**/*.test.*"]
}
