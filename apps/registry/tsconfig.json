{
  "extends": "@cfce/typescript-config/nextjs.json",
  "strictNullChecks": true,
  "declaration": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDirs": [
      "src",
      "."
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
    // "module": "NodeNext",
    // "moduleResolution": "NodeNext"
    ,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "next-env.d.ts",
    "next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "public",
    ".next/types/**/*.ts",
    "next.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "work"
  ]
}
