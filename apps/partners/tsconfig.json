{
  "extends": "@cfce/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "."
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "strictNullChecks": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "public",
    ".next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
