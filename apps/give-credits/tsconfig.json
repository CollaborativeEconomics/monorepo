{
  "extends": "@cfce/typescript-config/nextjs.json",
  "include": [
    "src",
    "next-env.d.ts",
    "next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "public",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "work"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDirs": ["src", "."],
    "paths": {
      "@/*": ["./*"]
    }
  }
}
