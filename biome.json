{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "ignore": [],
    "indentStyle": "space"
  },
  "files": {
    "ignore": ["dist/**"]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    },
    "jsxRuntime": "reactClassic"
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": {
          "level": "error",
          "fix": "safe"
        }
      }
    }
  }
}
